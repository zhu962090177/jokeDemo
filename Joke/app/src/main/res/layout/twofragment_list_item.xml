<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_twofragment_listImageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:foreground="@drawable/imageview_cornor"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_twofragment_listTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女神来了"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_twofragment_listSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:text="最全最美最养眼女神集中营!!"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_twofragment_subscribe_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="333304 订阅 |"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总贴数"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/tv_twofragment_total_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titleSelected"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="300861"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_twofragment_dingyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订阅"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/gray"
        android:layout_marginRight="10dp"
        android:background="@drawable/textveiw_cornerbroad"
        android:layout_gravity="center_vertical"/>
</LinearLayout>