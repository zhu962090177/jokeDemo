<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_common_bar"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/title_left_image"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/defaulthead"
            android:layout_gravity="center_vertical"
            android:layout_margin="3dp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="精选"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/optionleft_press"/>
        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="关注"
            android:gravity="center"
            android:textColor="@color/brown"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/optionright"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/publishicon_titlebar_press"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/fragment_choice"
            android:name="com.example.zhuhongwei.joke.choiceFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/fragment_care"
            android:name="com.example.zhuhongwei.joke.careFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>
