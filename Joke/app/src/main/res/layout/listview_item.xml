<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_is_hot"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/hoticon_textpagepng"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:id="@+id/iv_heade"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/headbg_profile"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/tv_heade_username"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="牙签不大能用就好"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_dislike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/dislike"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_textcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightBlack"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:text="你好啊哈防守打法你好啊哈防守打法你好啊哈防守打法你好啊哈防守打法"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:background="@drawable/cancelbutton"
        android:text="搞笑视屏"/>
    <LinearLayout
        android:id="@+id/layout_medio_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/comment_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_comment_header"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/headbg_profile"/>
            <TextView
                android:id="@+id/tv_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="仅仅应为"
                android:gravity="center" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_comment_upper"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/digupicon_textpage_night"/>
            <TextView
                android:id="@+id/tv_comment_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:text="1000"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="10dp"
            android:text="呵呵"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_upper"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/digupicon_textpage_night"/>
        <TextView
            android:id="@+id/tv_upper_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="1204"/>
        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/digdownicon_textpage_night"/>
        <TextView
            android:id="@+id/tv_down_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="343"/>
        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/commenticon_textpage"/>
        <TextView
            android:id="@+id/tv_news_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2343"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/moreicon_textpage_night"/>
        <TextView
            android:id="@+id/tv_more_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="1233"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/comment_bg"/>
</LinearLayout>