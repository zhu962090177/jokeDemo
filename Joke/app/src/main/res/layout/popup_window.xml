<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/tv_dislike_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titleSelected"
        android:text="选择不喜欢的理由"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    <ListView
        android:id="@+id/dislike_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dislike_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="8dp"
            android:textColor="@color/gray"
            android:text="取消" />
        <TextView
            android:id="@+id/tv_dislike_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="确定"
            android:textColor="@color/titleSelected"/>
    </LinearLayout>
</LinearLayout>