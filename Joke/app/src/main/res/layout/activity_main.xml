<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/button_bar_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/title_common_bar"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/home"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_gravity="center"
                android:paddingTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/found"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_gravity="center"
                android:paddingTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/audit_night"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="审核"
                android:textColor="@color/gray"
                android:layout_gravity="center"
                android:paddingTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/newstab"
                android:layout_gravity="center"/>
            <TextView
                android:text="消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_gravity="center"
                android:paddingTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_bar_group">
        <fragment
            android:id="@+id/fragment_one"
            android:name="com.example.zhuhongwei.joke.OneFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/fragment_tow"
            android:name="com.example.zhuhongwei.joke.TwoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/fragment_three"
            android:name="com.example.zhuhongwei.joke.ThreeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/fragment_four"
            android:name="com.example.zhuhongwei.joke.FourFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</RelativeLayout>
